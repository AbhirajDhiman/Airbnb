<% layout('layouts/boilerplate') %>

</head>
<body>
  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
    <h2>Edit Listing</h2>

    <label for="title">Title</label>
    <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" required />

    <label for="description">Description</label>
    <textarea id="description" name="listing[description]" required><%= listing.description %></textarea>

    <label for="image">Image URL</label>
    <input type="text" id="image" name="listing[image]" value="<%= listing.image %>" />

    <label for="price">Price</label>
    <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" required />

    <label for="country">Country Code</label>
    <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" />

    <label for="location">Location</label>
    <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" />

    <button type="submit">Edit</button>
  </form>
</body>
</html>