<% layout('layouts/boilerplate') %>
<body>
  <form method="POST" action="/listings">
    <h2>Create a Listing</h2>

    <label for="title">Title</label>
    <input type="text" id="title" name="listing[title]" placeholder="Enter title" required />

    <label for="description">Description</label>
    <textarea id="description" name="listing[description]" placeholder="Enter description" required></textarea>

    <label for="image">Image URL</label>
    <input type="text" id="image" name="listing[image]" placeholder="Enter image URL" />

    <label for="price">Price</label>
    <input type="number" id="price" name="listing[price]" placeholder="Enter price" required />

    <label for="country">Country Code</label>
    <input type="number" id="country" name="listing[country]" placeholder="Enter country code" />

    <label for="location">Location</label>
    <input type="text" id="location" name="listing[location]" placeholder="Enter location" />

    <button type="submit">Submit</button>
  </form>
</body>
